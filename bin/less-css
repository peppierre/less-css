#!/usr/bin/env node
'use strict';

var program, fs, CleanCSS, lesscss, minimized;
program  = require('commander');
fs = require('fs');
CleanCSS = require('clean-css');
lesscss = require('../lib/less-css.js');

program
	.usage("[options] <inputfile>")
	.option("--output <filename>", "specify output file")
	.parse(process.argv);

if (program.args.length < 1 ) {
	program.outputHelp();
	process.exit(1);
}

minimized = lesscss.from(
	new CleanCSS().minify(
		fs.readFileSync(
			program.args[0],
			"utf-8"
		)
	)
);

if (program.output) {
	fs.writeFileSync(
		program.output,
		minimized
	);
} else {
	console.log(minimized);
}